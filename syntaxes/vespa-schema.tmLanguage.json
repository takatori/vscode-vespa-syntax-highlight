{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "vespa-schema",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#schema"
		}
	],
	"repository": {
		"comments": {
			"name": "comment.line.vespa-schema",
			"begin": "(^[ \\t]+)?(\\#)",
			"end": "(?=^)",
			"comment": "Line comments start with # sequence and end with the next newline sequence. A line comment is considered equivalent to a newline sequence", 
			"captures": {
				"1": {
					"name": "punctuation.whitespace.comment.leading.vespa-schema"
				},
				"2": {
					"name": "punctuation.definition.comment.vespa-schema"
				}
			}
		},
		"schema": {			
			"begin": "\\b(?:schema)\\b\\s+([[:alpha:]_][[:alnum:]_]*)\\s*\\b(?:\\sinherits)\\b?\\s+([[:alpha:]_][[:alnum:]_]*)?\\s*",
			"beginCaptures": {
				"1": {
					"name": "entity.name.section.vespa.schema"
				},
				"2": {
					"name": "entity.name.type.vespa.schema"
				},
				"3": {
					"name": "entity.name.section.vespa.schema.inherits"
				},
				"4": {
					"name": "entity.name.type.vespa.schema.inherits.name-list"
				}
			},
			"end": "(?<=})",
			"patterns": [
				{
					"include": "#document"
				},
				{
					"include": "#field"
				},
				{
					"include": "#fieldset"
				},
				{
					"include": "#rank-profile"
				},
				{
					"include": "#constant"
				},
				{
					"include": "#onnx-model"
				},
				{
					"include": "#raw-as-base64-in-summary"
				},
				{
					"include": "#document-summary"
				},
				{
					"include": "#annotation"
				},
				{
					"include": "#import"
				}
			]
		},
		"document": {
			"begin": "\\b(?:document)\\b\\s+([[:alpha:]_][[:alnum:]_]*)\\s*\\b(?:\\sinherits)\\b?\\s+([[:alpha:]_][[:alnum:]_]*)?\\s*",
			"beginCaptures": {
				"1": {
					"name": "entity.name.section.vespa.schema"
				},
				"2": {
					"name": "entity.name.type.vespa.schema"
				},
				"3": {
					"name": "entity.name.section.vespa.schema.inherits"
				},
				"4": {
					"name": "entity.name.type.vespa.schema.inherits.name-list"
				}
			},
			"end": "(?<=})",
			"patterns": [
				{
					"include": "#struct"
				},
				{
					"include": "#field"
				},
				{
					"include": "#compression"
				}
			]			
		}
	},
	"scopeName": "source.vespa.schema"
}